<%= render 'layouts/notice' %>
<h1>Posts</h1>
<div class:"form">
<div class:"row">
<div class="col-md-6 col-md-offset-3">

<table>


  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= 'by '%></td>
        <td><%= post.user.fname %></td>
        <td><%= link_to 'Show', post, class:"btn btn-primary" %></td>

        <% if current_user && current_user.admin %>
        <td><%= link_to 'Edit', edit_post_path(post) ,class:"btn btn-primary" %></td>
        <td><%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-primary" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if current_user && current_user.admin %>

<%= link_to 'New Post', new_post_path, class:"btn btn-primary" %>

<% end %>
</div>
</div>
</div>